
import tkinter as tk
from PIL import Image, ImageTk

def paste_image(event):
    img = Image.open("path_to_your_image.png")
    photo = ImageTk.PhotoImage(img)
    label.config(image=photo)
    label.image = photo
    label.place(x=event.x, y=event.y, anchor="center")  # Đặt label tại vị trí chuột

root = tk.Tk()
root.geometry("400x400")

label = tk.Label(root)
label.pack()

root.bind("<Button-1>", paste_image)  # Sự kiện chuột trái

root.mainloop()