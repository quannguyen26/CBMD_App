import tkinter as tk
from tkinter import ttk

def update_button_state(event):
    selected_option = combobox.get()

    if selected_option == "Yes":
        no_button["state"] = "disabled"
        yes_button["state"] = "normal"
    elif selected_option == "No":
        yes_button["state"] = "disabled"
        no_button["state"] = "normal"

# Tạo cửa sổ Tkinter
root = tk.Tk()
root.title("Demo")

# Tạo biến kiểm soát cho combobox
selected_option_var = tk.StringVar()

# Tạo combobox
combobox = ttk.Combobox(root, values=["Yes", "No"], textvariable=selected_option_var)
combobox.pack(pady=10)
combobox.set("Yes")  # Giá trị mặc định

# Nút Yes
yes_button = tk.Button(root, text="Yes Button", state="normal")
yes_button.pack(pady=10)

# Nút No
no_button = tk.Button(root, text="No Button", state="disabled")
no_button.pack(pady=10)

# Liên kết sự kiện với hàm cập nhật trạng thái nút
combobox.bind("<<Combobox>>", update_button_state)

# Chạy vòng lặp chính của Tkinter
root.mainloop()
